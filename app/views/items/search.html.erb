<div class="show">

<div class="nav">
  <a href="/profiles/items/new">
    Back to search
  </a>  
</div>


<div class="container search">
  <h2>Search results for <%= params[:search_term] %></h2>  

  <% @items.each do |item| %>
  <ul class='search_result'>
  <div class='result'>
    <div class="img_frame">  
      <img src='<%= item[:image_url] %>' />
    </div>

  <p>
    <a href='<%= item[:url] %>' target='_blank'>
      <%= item[:name] %>  
    </a> <%= item[:price] %>
  </p>

  <p>
  <%= form_tag '/profiles/items/save', method: :post do %>
    <%= hidden_field_tag 'shopstyle_id', item[:shopstyle_id] %>
    <%= submit_tag "Save to closet" %>
  <% end %>
  </p>
  </ul>
  <% end %> 
 
</div>
</div>
