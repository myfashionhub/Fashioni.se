<div class="show">

<%= render 'fashionistas/nav' %>

<div class="container search">
 
  <h2><%= @fashionista.username %>'s closet</h2>  
    
  <ul class='search_result'>  
  <% @items.order('created_at DESC').each do |item| %>

  <li>
    <div class="img_frame"> 
      <a href='<%= item.url %>'>
        <img src='<%= item.image_url %>' target='_blank' />
      </a>
    </div>
      
    <p>
      <%= item.description %> | <%= item.price %>
    </p>  

    <p>
    <form action='/profiles/items/copy' method='post'>
      <%= token_tag %>
      <input type='hidden' name='item_id' value='<%=item.id%>'>
      <input type='submit' value='Copy item'>
    </form>  

      <%= form_tag '/item.id/copy', method: :post do %>
        <%= hidden_field_tag 'item_id', item.id %>
        <%= submit_tag "Copy item" %>
      <% end %>
    </p>

  </li>  

  <% end %> 
  </ul>

</div>
</div>
