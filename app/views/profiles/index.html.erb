<div class="show">

  <%= render "/fashionistas/nav" %>

  <div class="container">
    <div class="col-md-10">

      <div class="profile">
      <img src="<%= @fashionista.pic_url %>" class="profile-pic" />

      <h2>
        <b><%= @fashionista.username %></b>
        <a href="/profile/edit" class='edit'>
          Edit profile
        </a>
      </h2>

      <p>
        <i class="fa fa-quote-left"></i>
        <b><%= @fashionista.tagline %></b>
        <i class="fa fa-quote-right"></i>
      </p>

      <table class='profile-grid'>
        <tr>
          <td><img src='/assets/hanger-icon.png' /></td>

          <td>
            <p><b><%= Style.find(@fashionista.style_id).name.capitalize %></b>
            </p>
          </td>
        </tr>
      </table>

    </div>
    <div class="closet">
      <h3>
        Your closet
        <a href="items/new" class='add'>
          Add items <i class="fa fa-plus"></i>
        </a>
      </h3>

      <% if @items.length > 0 %>
      <% @items.each do |item| %>
        <a href='/items/<%= item.id %>'>
          <img src="<%= item.image_url %>" class='thumbnail' />
        </a>
      <% end %>
      <% end %>

      <div class="row"></div>
    </div>

    </div> <!-- col md 10 -->

  </div> <!-- container -->

</div> <!-- show -->
