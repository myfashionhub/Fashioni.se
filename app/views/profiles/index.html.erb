<div class="show">

  <%= render "/fashionistas/nav" %>

  <div class="container">
    <div class="col-md-10">
      <h2>
        <b><%= @fashionista.username %></b>
      </h2>


      <img src="<%= @fashionista.pic_url %>" class="profile_pic" /><br/>

      <p>
        <i class="fa fa-quote-left"></i>
        <b><%= @fashionista.tagline %></b>
        <i class="fa fa-quote-right"></i>
      </p>

      <table class='profile_grid'>
        <tr>
          <td><img src='/assets/hanger-icon.png' /></td>

          <td>
            <p><b><%= Style.find(@fashionista.style_id).name.capitalize %></b>
            </p>
          </td>
        </tr>
      </table>

      <a href="/profiles/edit" class='edit'>
        <button>Edit profile</button>
      </a>

      <a href="items/new" class='edit'>
        <button>Search for items</button>
      </a>


      <h3>Your closet</h3>
      <% if @items.length > 0 %>
      <% @items.each do |item| %>
        <a href='/items/<%= item.id %>'>
          <img src="<%= item.image_url %>" class='thumbnail' />
        </a>
      <% end %>
      <% end %>

      <div class="row"></div>
    </div>

  </div>

</div>
